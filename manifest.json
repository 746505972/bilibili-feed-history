{
  "manifest_version": 3,
  "name": "Bilibili Feed History",
  "version": "1.0.0",
  "description": "保存B站推荐视频的历史记录，方便找回之前被换掉的视频",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://www.bilibili.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.bilibili.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bilibili Feed History"
  }
}