{
  "manifest_version": 3,
  "name": "Bilibili Feed History",
  "version": "1.0.1",
  "description": "保存B站首页推荐视频的历史记录，方便找回被刷新掉的内容",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.bilibili.com/"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.bilibili.com/"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Bilibili Feed History"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}